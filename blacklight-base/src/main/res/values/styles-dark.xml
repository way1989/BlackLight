	<style name="BL.Theme.Dark.WithNav" parent="BL.Theme.Dark" />


	<style name="BL.Theme.Dark.Translucent" parent="BL.Theme.Dark">
		<item name="android:windowIsTranslucent">true</item>
	</style>

	<style name="BL.Theme.Dark.TranslucentActionBar.NoTranslucent" parent="BL.Theme.Dark">
		<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="BL.Theme.Dark.TranslucentActionBar" parent="BL.Theme.Dark.Translucent">
		<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="BL.Theme.Dark.GradientActionBar" parent="BL.Theme.Dark.TranslucentActionBar">
		<item name="android:actionBarStyle">@style/My.Widget.Holo.Dark.ActionBar.Gradient</item>
	</style>


	<style name="My.Widget.Holo.Dark.ActionBar" parent="@style/My.Widget.Holo.Light.ActionBar">
		<item name="android:background">@color/dark_action_gray</item>
